<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:liveButton="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="#BF333333"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:text="YOUR PHONE"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/deviceimage"
                android:layout_width="80dp"
                android:layout_height="133dp"
                android:layout_alignTop="@+id/myphone"
                android:layout_marginLeft="40dp"
                android:layout_toLeftOf="@+id/myphone"
                android:layout_toStartOf="@+id/myphone"
                android:background="#fff"
                android:src="@drawable/ic_launcher_background" />

            <TextView

                android:id="@+id/myphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_below="@+id/textView"
                android:layout_marginTop="27dp"
                android:background="#FFF"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:shadowColor="#D3d3d3"
                android:text="Random Text IS  IS THERE"
                android:textColor="#007AFF"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ru.katso.livebutton.LiveButton xmlns:livebutton="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sell_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:shadowColor="@color/fbutton_color_asbestos"
            android:text="Evaluation"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            liveButton:normalHeight="4dp"
            livebutton:backgroundColor="@color/fbutton_color_sun_flower"
            livebutton:corners="5dp"
            livebutton:pressedHeight="1dp" />


    </LinearLayout>


</android.support.v7.widget.CardView>