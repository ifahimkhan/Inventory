<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:padding="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Fahim khan"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <org.fabiomsr.moneytextview.MoneyTextView
                    android:id="@+id/item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    app:amount="2500"
                    app:baseTextColor="@color/colorAccent"
                    app:baseTextSize="20sp"
                    app:decimalDigitsTextSize="15sp"
                    app:decimalGravity="top"
                    app:decimalSeparator="."
                    app:symbol="@string/rupees"
                    app:symbolGravity="start|top"
                    app:symbolMargin="5sp"
                    app:symbolTextSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SamSung Galaxy Note 3"
                android:textColor="@color/fbutton_color_wet_asphalt"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Hello this is my smart phone in flawlless condition useds for like 12 months and above  very good quality in conidtion "
                android:textAppearance="?android:textAppearanceSmall" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:drawableLeft="@drawable/ic_perm_contact_calendar_black_24dp"
                    android:id="@+id/item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="date:"
                    android:textAppearance="?android:textAppearanceSmall" />
                <TextView
                    android:drawableLeft="@drawable/ic_location_on_black_24dp"
                    android:id="@+id/item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Location:"
                    android:textAppearance="?android:textAppearanceSmall" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>